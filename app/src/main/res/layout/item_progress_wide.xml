<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_marginStart="8dp"
  android:layout_marginEnd="8dp"
  tools:background="@color/black">

  <View
    android:id="@+id/imagePlaceholderView"
    android:layout_width="240dp"
    android:layout_height="166dp"
    android:background="@drawable/bg_item_placeholder"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/textPlaceholderView"
    android:layout_width="0dp"
    android:layout_height="20dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="40dp"
    android:textSize="16sp"
    android:background="@drawable/bg_item_placeholder"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/imagePlaceholderView" />

  <Space
    android:layout_width="match_parent"
    android:layout_height="4dp"
    android:id="@+id/space"
    app:layout_constraintTop_toBottomOf="@id/textPlaceholderView"/>

</androidx.constraintlayout.widget.ConstraintLayout>